{
  "manifest_version": 3,
  "name": "Reddit AI Demand Miner",
  "version": "1.0.0",
  "description": "Scrape Reddit posts, analyze with OpenAI, and aggregate most requested AI tools.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "tabs",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.reddit.com/*",
    "https://platform.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content-google.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content-reddit.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Reddit AI Demand Miner",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
