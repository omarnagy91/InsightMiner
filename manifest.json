{
  "manifest_version": 3,
  "name": "InsightMiner",
  "version": "2.0.0",
  "description": "Mines real market demand directly from user discussions across Reddit, Stack Overflow, GitHub, Quora, Product Hunt, Hacker News, Dev.to, and Medium. Turns raw community chatter into actionable product blueprints.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "tabs",
    "contextMenus",
    "sidePanel",
    "notifications"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.reddit.com/*",
    "https://stackoverflow.com/*",
    "https://github.com/*",
    "https://dev.to/*",
    "https://medium.com/*",
    "https://producthunt.com/*",
    "https://quora.com/*",
    "https://news.ycombinator.com/*",
    "https://platform.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content-google.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content-reddit.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://stackoverflow.com/*"],
      "js": ["content-stackoverflow.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://github.com/*"],
      "js": ["content-github.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://dev.to/*"],
      "js": ["content-devto.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://medium.com/*"],
      "js": ["content-medium.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open InsightMiner",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
